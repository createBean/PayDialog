<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--分割线-->
    <style name="divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/divide_line</item>
    </style>

    <style name="layout_input_number_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">63dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--底部弹框-->
    <style name="BottomDialog" parent="@style/Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--黑色正常大小的文字-->
    <style name="black_normal_text">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="black_large_text">
        <item name="android:textColor">@color/black_large_text</item>
        <item name="android:textSize">@dimen/font_larger</item>
    </style>

    <style name="black_xlarge_text">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/font_xlarger</item>
    </style>

    <style name="AinmBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!--键盘数字-->
    <style name="btn_input_number_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:background">@drawable/item_press_selector</item>
    </style>

    <style name="btn_space_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black_text</item>
    </style>

    <declare-styleable name="PayPasswordView">
        <attr name="count" format="integer"/>
        <attr name="border_color" format="color"/>
        <attr name="dot_color" format="color"/>
    </declare-styleable>
</resources>
